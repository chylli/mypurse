%h1 Listing account_categories
%table
  %thead
    %tr
      %th User
      %th Name
      %th Description
      %th Parent
      %th{:colspan => "3"}
  %tbody
    - @account_categories.each do |account_category|
      %tr
        %td= account_category.user_id
        %td= account_category.name
        %td= account_category.description
        %td= account_category.parent_id
        %td= link_to 'Show', account_category
        %td= link_to 'Edit', edit_account_category_path(account_category)
        %td= link_to 'Destroy', account_category, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Account category', new_account_category_path
