= form_for(@transaction_category) do |f|
  - if @transaction_category.errors.any?
    #error_explanation
      %h2
        = pluralize(@transaction_category.errors.count, "error")
        prohibited this transaction_category from being saved:
      %ul
        - @transaction_category.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :description
    %br/
    = f.text_field :description
  .field
    = f.label :parent_id
    %br/
    = f.number_field :parent_id
  .actions
    = f.submit
